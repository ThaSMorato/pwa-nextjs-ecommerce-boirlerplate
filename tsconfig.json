{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"es5",
			"dom",
			"dom.iterable",
			"esnext"
		],
		"allowJs": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noEmit": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"baseUrl": "./",
		"paths": {
			"components/*": ["src/components/*"],
			"pages/*": ["src/pages/*"],
			"stores/*": ["src/stores/*"],
			"contexts/*": ["src/contexts/*"],
			"i18n/*": ["src/i18n/*"],
			"styles/*": ["src/styles/*"],
			"styles/exports/*": ["src/styles/exports/*"],
			"src/": ["src/*"]
		},
		"skipLibCheck": true,
		"typeRoots": ["node_modules/@types"],
		"types": ["jest", "cypress", "node"]
	},
	"include": [
		"next-env.d.ts",
		"app.d.ts",
		"**/*.ts",
		"**/*.tsx",
		"pages/**/*",
		"src/**/*",
		"node_modules/cypress",
		"cypress/*/*.ts",
	],
	"exclude": [
		"node_modules",
		"public",
		"**/*.test.ts",
		"**/*.test.tsx"
	]
}
